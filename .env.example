# ===========================================
# Anadolu'nun Mirası - Ortam Değişkenleri Şablonu
# ===========================================
# Bu dosyayı .env olarak kopyalayıp değerleri doldurun:
#   cp .env.example .env

# --- Uygulama Ayarları ---
APP_NAME=AnadolununMirasi
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080
APP_TIMEZONE=Europe/Istanbul
APP_LOCALE=tr

# --- Veritabanı Ayarları ---
DB_HOST=mysql
DB_PORT=3306
DB_NAME=anadolunun_mirasi
DB_USER=anadolu_app
DB_PASS=BURAYA_GUCLU_SIFRE_YAZIN
DB_ROOT_PASSWORD=BURAYA_ROOT_SIFRESI_YAZIN
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_turkish_ci

# --- Admin Paneli ---
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=BURAYA_BCRYPT_HASH_YAZIN

# --- Dosya Yükleme ---
UPLOAD_DIR=/var/www/html/uploads
UPLOAD_MAX_SIZE=20971520
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm,video/ogg

# --- PHP Ayarları ---
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=25M
PHP_MAX_EXECUTION_TIME=120
PHP_MEMORY_LIMIT=256M

# --- CORS Ayarları ---
CORS_ALLOWED_ORIGINS=http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# --- Güvenlik ---
SESSION_LIFETIME=3600
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# --- Loglama ---
LOG_LEVEL=error
LOG_FILE=/var/www/html/logs/app.log

# --- MySQL Docker Ayarları ---
MYSQL_ROOT_PASSWORD=BURAYA_ROOT_SIFRESI_YAZIN
MYSQL_DATABASE=anadolunun_mirasi
MYSQL_USER=anadolu_app
MYSQL_PASSWORD=BURAYA_GUCLU_SIFRE_YAZIN
